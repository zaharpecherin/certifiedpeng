= render partial: 'shared/navbar'

.home-page
  %p
    = link_to root_path do
      = image_tag('certified-peng.png', :class => "main-logo")

%h1.text-center Contact Us
.row
  .col-lg-4.col-md-3.col-xs-2
  .col-lg-4.col-md-6.col-xs-8
    = form_tag sent_email_path do
      .form-group
        %label{:for => "InputName"} Name
        %input#InputName.form-control{:placeholder => "Enter name", :name => "name", :type => "text", :required => true}
      .form-group
        %label{:for => "InputEmail"} Email address
        %input#InputEmail.form-control{"aria-describedby" => "emailHelp", :placeholder => "Enter email", :name => 'email', :type => "email", :required => true}
      .form-group
        %label{:for => "telophone"} Telephone
        %input#telophone.form-control{:name => 'telephone', :type => "tel"}
      .form-group
        %label{:for => "reason"} Reason for Contact
        %select#reason.form-control{:name => 'reason'}
          %option Advertising
          %option Dashboard Support
          %option Analytics
          %option Peng Suggestion
      .form-group
        %label{:for => "message"} Message
        %textarea#message.form-control{:rows => "3", :name => 'message', :required => true}
      .form-group
        .recaptcha
          = recaptcha_tags
      %button.btn.btn-primary{:type => "submit", style: 'width: 100%'} Send
  .col-lg-4.col-md-3.col-xs-2



= render :partial => 'shared/footer'