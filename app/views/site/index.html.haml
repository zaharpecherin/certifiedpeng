.image-container
  .container
    .row
      - @categories.each do |category|
        .col-md-4.text-center
          %h2{style: 'font-weight: bold;'}
            = category.name.capitalize
          = link_to category_path(category.name) do
            - if category.name == 'life'
              = image_tag 'home_life.jpg', class: 'image-box-small'
            - elsif category.name == 'fashion'
              = image_tag 'home_merch-girl.jpg', class: 'image-box-small'
            - else
              = image_tag 'home_retail.jpg', class: 'image-box-small'
          %h3{style: 'font-weight: bold;'}
            = link_to 'Check This Out >', category_path(category.name)
    %hr

