.navbar
  = link_to 'Home Page', root_path

.home-page
  %p
    = link_to root_path do
      = image_tag('certified-peng.png', :class => "main-logo")

.form-box
  %h3.text-center Please login
  %br
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label 'Email address'
      %br
      = f.email_field :email, autofocus: true, placeholder: "email@example.com", class: 'form-control'
    .form-group
      = f.label :password
      = f.password_field :password, autocomplete: "off", placeholder: "******", class: 'form-control'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    %input.btn.btn-primary{:value => "Login", :type => "submit", style: 'width: 100%;'}
  %br
  %p.text-center
    Donâ€™t have an account?
    = link_to 'Signup', new_user_registration_path
  %p.text-center
    = link_to 'Forgot your password?', new_user_password_path


