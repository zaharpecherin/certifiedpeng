.navbar
  = link_to 'Home Page', root_path

.container{style: 'margin-top: 10%; padding-left: 40%'}
  %h3 Please sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    -#= devise_error_messages!
    .field
      = f.label 'Email address'
      = f.email_field :email, autofocus: true, placeholder: "email@example.com"
    .field
    = f.label :product
    = f.text_field :product, autocomplete: "off", :name => "product", placeholder: 'Enter your tags', :value => params[:product]
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off", placeholder: "******"
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "******"
      %input.btn.btn-lg.btn-primary.btn-block{:value => "Sign up", :type => "submit", style: 'width: 220px;'}
      %br
      Already have an account?
      = link_to 'Login', new_user_session_path
