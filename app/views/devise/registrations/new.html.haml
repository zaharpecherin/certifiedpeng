.navbar
  = link_to 'Home Page', root_path

.form-box
  %h3.text-center Please sign up
  %br
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-group
      = f.label 'Email address'
      %br
      = f.email_field :email, autofocus: true, placeholder: "email@example.com", class: 'form-control'
    .form-group
      = f.label :tag
      %br
      = f.text_field :tag, autocomplete: "off", :name => "tag", placeholder: 'Enter tags separated by commas', :value => params[:tag], class: 'form-control'
    .form-group
      = f.label :password
      %br
      = f.password_field :password, autocomplete: "off", placeholder: "******", class: 'form-control'
    .form-group
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "******", class: 'form-control'
    %input.btn.btn-primary{:value => "Sign up", :type => "submit", style: 'width: 100%;'}
  %br
  %p.text-center
    Already have an account?
    = link_to 'Login', new_user_session_path
